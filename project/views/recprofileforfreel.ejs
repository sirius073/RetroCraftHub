<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RetroCraftHub - Freelancer Profile</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,700;0,900;1,200;1,400;1,500;1,600;1,800&display=swap');
body {
	margin: 0;
	font-family: 'Poppins', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

nav {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
	background-color: #333;
	padding: 15px;
	color: white;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.logo {
	font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
	font-size: 34px;
    font-style: italic;
    color: #fff;
	font-size: 1.5em;
	font-weight: bold;
}

a{
	color: white;
	text-decoration: none;
	margin: 0 10px;
	font-size: 1.2em;
}
.profile-btn, .search-btn, .notification-icon {
	color: white;
	text-decoration: none;
	margin: 0 10px;
	font-size: 1.2em;
}

.notification-icon {
	position: relative;
}


.freelancer-card {
    background-color: #fff;
    color: #000;
    border: 1px solid #ddd;
    border-radius: 8px;
    margin: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 15px;
}

.freelancer-card h3 {
    margin-bottom: 10px;
    font-size: 1.5em;
    color: #333;
}

.freelancer-card p {
    margin: 0;
    font-size: 1.2em;
    color: #555;
}


.welcome-user {
    background-color: #2c2d2d;
    color: #fff;
    padding: 20px;
    padding-bottom: 0px;
    
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    text-align: center;
}

.welcome-user h2 {
	color: #fff;
    margin-bottom: 10px;
    font-size: 1.5em;
}

.welcome-user p {
    margin: 0;
    font-size: 1.2em;
}

.welcome-user .profile-picture {
  width: 200px; /* Set a fixed width for the profile picture container */
  height: 200px; /* Set a fixed height for the profile picture container */
  overflow: hidden; /* Hide overflowing content */
 }
 .welcome-user .profile-picture img {
 
  display: block; /* Remove any extra spacing beneath the image */
  transition: transform 0.3s ease-in-out; /* Add a smooth transition effect */
}

.welcome-user .profile-picture:hover img {
  transform: scale(1.1); /* Enlarge the image on hover */
}


.profile-form {
  max-width: 600px;
  margin: 20px auto;
  background-color: #fff;
  padding: 20px;
  border-radius: 5px;
}

.profile-form label,
.profile-form button {
  display: block;
  margin-bottom: 10px;
}

.profile-form textarea,
.profile-form input[type="file"],
.profile-form button {
  width: calc(100% - 20px);
  padding: 8px;
  font-size: 1em;
  margin-bottom: 15px;
}
input[type="file"] {
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 3px;
  padding: 6px;
}

input[type="file"]:hover {
  cursor: pointer;
}

.profile-picture {
  margin-bottom: 10px;
  margin-top: 30px;;
  justify-content: center;
  align-items: center;
  display: inline-block;
  border-radius: 50%;
}
.profile-picture img{
  width:100%;
  height: auto;
}
span{
  padding-top: 10px;
  font-size: 25px;
  font-weight:200;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.back{
   text-align: center;
}
.back a{
  display: inline-block;
}
  </style>
</head>
<body>
  <header>
    <nav>
      <div class="logo">RetroCraftHub</div>
    </nav>
  </header>
  <div class="welcome-user">
    <h2>Profile of <%= recruiter.name %></h2>
    <div class="profile-picture">
      <% if (recruiter.profileImage) { %>
        <img src="/uploads/<%= recruiter.profileImage %>" alt="Profile Image">
    <% } else { %>
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQrxMNkq9COMgaR8ikKTfjVHoAHcOdydsBHoQ&usqp=CAU">
    <% } %>
    

    </div>
  </div>
  <form action="#" method="post" enctype="multipart/form-data" class="profile-form">
    <label for="username">Name: <span><%=recruiter.name%></span></label>
    <label for="profession">Profession:</label>
    <input type="text" name="profession" id="profession" value="<%=recruiter.profession ? recruiter.profession : '' %>" readonly>
    <label for="experience">Experience and Qualifications:</label>
    <textarea name="experience" id="experience" rows="4" cols="50" readonly><%= recruiter.experience %></textarea>
    <label for="projects">Past Projects:</label>
    <textarea name="projects" id="projects" rows="4" cols="50" readonly><%= recruiter.projects %></textarea>
    <label for="about">About:</label>
    <textarea name="about" id="about" rows="4" cols="50" readonly><%= recruiter.about %></textarea>
    <div class="contact-container">
      <div class="contact-me">
        <h2>Contact Details</h2>
        <form id="contactForm">
          <div class="form-row">
            <label for="phone">Phone:</label>
            <textarea name="phone" id="phone" cols="1" rows="1" readonly><%=recruiter.contactDetails.phone%></textarea>
          </div>
          <div class="form-row">
            <label for="address">Address:</label>
            <textarea name="address" id="address" cols="1" rows="1" readonly><%=recruiter.contactDetails.address%></textarea>
          </div>
          <div class="form-row">
            <label for="email">Email:</label>
            <textarea name="email" id="email" cols="1" rows="1" readonly><%=recruiter.contactDetails.email%></textarea>
          </div>
        </div>
  </form>
    
  <script>

document.addEventListener("DOMContentLoaded", () => {
  const profileImageInput = document.getElementById("profileImage");
  const profilePic = document.getElementById("profilePic");

  profileImageInput.addEventListener("change", (event) => {
    const file = event.target.files[0];

    if (file) {
      const reader = new FileReader();

      reader.onload = (e) => {
        profilePic.src = e.target.result;
      };

      reader.readAsDataURL(file);
    }
  });
});

  </script>
</body>
